extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    +alert-error(5000)
    .container.my-5    
        .row.justify-content-center 
            .col-8 
                h1(class = "text-center") Dang ky tai khoan 
                form(
                    action= `/user/register`
                    method = "POST"
                ) 
                    div(class = "form-group")
                        label(for="fullName") Ho Ten * 
                        input(
                            type="text"
                            class = "form-control"
                            id = "fullName"
                            name = "fullName"
                            required
                        ) 
                    div(class = "form-group")
                        label(for="email") Email * 
                        input(
                            type="email"
                            class = "form-control"
                            id = "email"
                            name = "email"
                            required
                        ) 
                    div(class = "form-group")
                        label(for="passWord") Mat Khau
                        input(
                            type="password"
                            class = "form-control"
                            id = "passWord"
                            name = "passWord"
                            required
                        ) 
                    div(class = "form-group")
                        button(
                            type = "submit"
                            class = "btn btn-primary"
                        ) Dang ky 