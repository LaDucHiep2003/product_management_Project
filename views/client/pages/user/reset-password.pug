extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    +alert-error(5000)
    .container.my-5    
        .row.justify-content-center 
            .col-8 
                h1(class = "text-center") Doi mat khau
                form(
                    action= `/user/password/reset`
                    method = "POST"
                ) 
                    div(class = "form-group")
                        label(for="passWord") Mật khẩu moi
                        input(
                            type="password"
                            class = "form-control"
                            id = "passWord"
                            name = "passWord"
                            required
                        ) 
                    div(class = "form-group")
                        label(for="confirmPassword") Xac nhan mat khau
                        input(
                            type="password"
                            class = "form-control"
                            id = "confirmPassword"
                            name = "confirmPassword"
                            required
                        ) 
                    div(class = "form-group")
                        button(
                            type = "submit"
                            class = "btn btn-primary"
                        ) Doi mat khau
