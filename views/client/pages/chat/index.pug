extends ../../layouts/default.pug
include ../../mixins/box-head.pug 


block main 
    .container.my-3 
        .row 
            .col-12 
                +box-head("Chat")

        .row 
            .col-12 
                .chat(my-id = user.id)
                    .inner-body 
                        each chat in chats
                            div(class = (chat.user_id == user.id ? "inner-outgoing" : "inner-incoming"))
                                if(chat.user_id != user.id)
                                    .inner-name #{chat.infoUser.fullName}
                                .inner-content
                                    | #{chat.content}
                        div(class = "inner-list-typing")
                            div(class = "box-typing")
                                div(class = "inner-name") A 
                                div(class = "inner-dots")
                                    span 
                                    span 
                                    span 
                            
                            div(class = "box-typing")
                                div(class = "inner-name") B
                                div(class = "inner-dots")
                                    span 
                                    span 
                                    span 
                                
                           
                    .inner-foot 
                        form(
                            class = "inner-form"
                            action = ""
                        )
                            input(
                                type = "text"
                                placeholder = "Nhap noi dung"
                                name = "content"
                            )
                            span(class = "button-icon btn btn-light mx-2") Icon

                            button 
                                i.fa-solid.fa-paper-plane

    div(class="tooltip" role="tooltip")
        emoji-picker
                            