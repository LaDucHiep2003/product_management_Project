
mixin alert-success(time)
    - if (messages.sucsess)
        .message.info
            div(
                class = "alert alert-success"
                data-time = time
                show-alert
            ) #{messages.sucsess} <span close-alert> x</span>

mixin alert-error(time)
     - if (messages.error)
        .message.info
            div(
                class = "alert alert-danger"
                data-time = time
                show-alert
            ) #{messages.error} <span close-alert> x</span>